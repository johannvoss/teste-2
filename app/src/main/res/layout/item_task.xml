<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground">

        <!-- Título da Tarefa -->
        <TextView
            android:id="@+id/tvTaskTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_title"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:paddingBottom="4dp" />

        <!-- Categoria da Tarefa -->
        <TextView
            android:id="@+id/tvTaskCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_category"
            android:textSize="16sp"
            android:textColor="#7A7A7A"
            android:paddingBottom="4dp" />

        <!-- Data de Vencimento da Tarefa -->
        <TextView
            android:id="@+id/tvTaskDueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_due_date"
            android:textSize="16sp"
            android:textColor="#7A7A7A"
            android:paddingBottom="8dp" />

        <!-- Nome da Tarefa (ou descrição) -->
        <TextView
            android:id="@+id/taskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000" />

        <!-- Linha de Separação -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Botão para Editar ou Remover -->
        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnEditTask"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_task_button"
                android:layout_marginEnd="8dp"
                android:textColor="#6200EE"
                android:backgroundTint="@android:color/transparent" />

            <Button
                android:id="@+id/btnDeleteTask"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_task_button"
                android:textColor="#FF0000"
                android:backgroundTint="@android:color/transparent"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

